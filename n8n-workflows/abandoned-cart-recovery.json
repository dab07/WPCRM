      "id": "http-2",
      "name": "Check Purchase Status",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [900, 300],
      "credentials": {
        "supabaseApi": {
          "id": "1",
          "name": "Supabase CRM"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const contact = $input.item.json[0];\nconst productInterests = contact.metadata?.product_interests || [];\nconst targetProduct = productInterests.find(p => p.product_id === $('Product Interest Detected').item.json.product_id);\n\nreturn {\n  json: {\n    ...contact,\n    still_interested: targetProduct?.status === 'interested'\n  }\n};"
      },
