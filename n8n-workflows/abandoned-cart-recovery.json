        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"id\": \"{{ $json.contact_id }}\",\n  \"metadata\": {\n    \"product_interests\": [\n      {\n        \"product_id\": \"{{ $json.product_id }}\",\n        \"product_name\": \"{{ $json.product_name }}\",\n        \"detected_at\": \"{{ $now.toISO() }}\",\n        \"status\": \"interested\"\n      }\n    ]\n  }\n}",
        "options": {
          "queryString": "on_conflict=id"
        }
      },
      "id": "http-1",
      "name": "Store Interest Event",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [460, 300],
      "credentials": {
        "supabaseApi": {
          "id": "1",
          "name": "Supabase CRM"
        }
      }
    },
    {
      "parameters": {
